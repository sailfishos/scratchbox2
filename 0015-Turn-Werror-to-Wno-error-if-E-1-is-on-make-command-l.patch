@@ -13,7 +13,7 @@ $(D)/sb2-show: $(D)/sb2-show.o
 
 #------------
 # sb2-ruletree, a debugging tool
-$(D)/sb2-ruletree: CFLAGS := $(CFLAGS) -Wall -W -Werror \
